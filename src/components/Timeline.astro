---
const { events } = Astro.props;
---
<div class="relative border-l-2 border-gradient-to-b from-indigo-500 via-purple-500 to-pink-500 ml-4 pl-6">
  {events.map(event => (
    <div class="mb-8 relative fade-in">
      <div class="absolute -left-4 top-1 w-3 h-3 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full shadow-md"></div>
      <span class="text-indigo-600 font-semibold text-sm uppercase">{event.year}</span>
      <h4 class="font-bold text-lg text-purple-700 mt-1 mb-1">{event.title}</h4>
      <p class="text-gray-600 leading-relaxed">{event.description}</p>
    </div>
  ))}
</div>
