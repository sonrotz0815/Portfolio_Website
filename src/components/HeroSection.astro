---
const { title, subtitle, ctaText, ctaLink, img, reverse = false } = Astro.props;

// reverse = true â†’ Bild rechts, Text links
---
<style>
  .section-title {
  @apply text-5xl font-extrabold mb-14 text-center tracking-tight;
  background: linear-gradient(to right, #6366f1, #a855f7);
  -webkit-background-clip: text;
  color: transparent}
</style>


<section class="my-20">
  <div class={`flex flex-col md:flex-row items-center gap-10 ${reverse ? "md:flex-row-reverse" : ""}`}>
    
    <!-- Bild -->
    <div class="md:w-1/2 flex justify-center">
      <img 
        src={img} 
        alt="Hero Image" 
        class="rounded-2xl shadow-lg w-full max-w-lg h-full max-h-80 object-cover"
      />
    </div>

    <!-- Text -->
    <div class="md:w-1/2 text-center md:text-left">
      <h1 class="section-title">{title}</h1>
      <p class="text-gray-600 mb-6 text-xl max-w-xl">{subtitle}</p>

      <a 
        href={ctaLink} 
        class="inline-block bg-indigo-500 text-white px-10 py-5 rounded-full hover:bg-pink-600 transition text-lg"
      >
        {ctaText}
      </a>
    </div>

  </div>
</section>

