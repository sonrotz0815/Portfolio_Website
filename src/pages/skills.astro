<BaseLayout title="Fähigkeiten & Zertifikate">
<style>
:root {
  --glow: rgba(99,102,241,0.35);
}
.section-title {
  @apply text-5xl font-extrabold mb-14 text-center tracking-tight;
  background: linear-gradient(to right, #6366f1, #a855f7);
  -webkit-background-clip: text;
  color: transparent;
}
.skill-grid {
  @apply grid sm:grid-cols-2 md:grid-cols-3 gap-8;
}
.skill-card {
  @apply p-6 rounded-2xl text-center shadow-xl border border-white/20 bg-white/50 dark:bg-white/10 backdrop-blur-xl transition-all duration-500;
  position: relative;
  overflow: hidden;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.8s ease forwards;
}
.skill-card:hover {
  box-shadow: 0px 12px 40px var(--glow);
  transform: translateY(-6px) scale(1.03);
  border-color: var(--glow);
}
.skill-card img.skill-img {
  position: absolute;
  top: 1rem;   /* distance from top */
  left: 1rem;  /* distance from left */
  width: 2.5em; /* adjust size */
  height: 2.5em;
  border-radius: 0.5rem; /* optional, rounded corners */
  object-fit: cover;
}
.skill-title {
  @apply font-bold text-xl tracking-wide;
}
.skill-sub {
  @apply text-sm;
}
.skill-icon {
  @apply w-10 h-10 mx-auto mb-3 opacity-80;
}
.badge {
  @apply px-2 py-1 bg-indigo-100 text-indigo-700 dark:bg-indigo-900 dark:text-indigo-300 rounded-md text-xs font-semibold;
}
@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
section.skills-section {
  @apply relative py-24;
}
section.skills-section::before {
  content: "";
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at top, rgba(99,102,241,0.12), transparent 70%);
  pointer-events: none;
}
</style>

